<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/splash_iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/splash_vp_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/splash_tab_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        style="@style/GuideSmartTabLayout"
            />
    
    

    
    <TextView
        android:id="@+id/guide_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:background="@drawable/initial_sl_guide_button"
        android:clickable="true"
        android:paddingBottom="@dimen/margin_8dp"
        android:paddingLeft="@dimen/margin_30dp"
        android:paddingRight="@dimen/margin_30dp"
        android:paddingTop="@dimen/margin_8dp"
        android:text="@string/guide_done"
        android:textColor="@color/base_color"
        android:visibility="gone"
            />
</RelativeLayout>

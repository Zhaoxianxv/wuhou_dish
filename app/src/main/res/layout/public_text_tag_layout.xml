<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/public_taxt_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/WhiteSmoke"
        android:text="@string/please_login"
        android:textSize="@dimen/textsize9"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_45dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/textsize9"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/public_tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_45dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_gray_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        app:tint="@color/app_toobar_background"
        />
</RelativeLayout>